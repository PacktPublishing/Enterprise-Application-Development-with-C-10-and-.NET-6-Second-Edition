@model Packt.Ecommerce.DTO.Models.InvoiceDetailsViewModel
@{
    ViewData["Title"] = "Invoice";
}

@{double total = 0;}
<div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Invoice</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">


                        <!-- Main content -->
                        <div class="invoice p-3 mb-3">
                            <!-- title row -->
                            <div class="row">
                                <div class="col-12">
                                    <h4>
                                        <i class="fas fa-globe"></i> Packt XYZ, Inc.
                                    </h4>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- info row -->
                            <div class="row invoice-info">
                                <div class="col-sm-4 invoice-col">
                                    Sold By
                                    <address>
                                        <strong>Packt XYZ, Inc.</strong><br>
                                        <b>@Model.SoldBy.SellerName</b>
                                        <b>@Model.SoldBy.Phone</b>
                                        <b>@Model.SoldBy.Email</b>
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    To
                                    <address>
                                        <strong>John Doe</strong><br>
                                                                 <b>@Model.ShippingAddress.Address1</b>
                                                                 <b>@Model.ShippingAddress.City</b>
                                                                 <b>@Model.ShippingAddress.Country</b>
                                    </address>
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-4 invoice-col">
                                    <b>Invoice @Model.Id</b><br>
                                    <br>
                                    <b>Order ID:</b> @Model.OrderId<br>
                                    <b>Payment Mode:</b> @Model.PaymentMode<br>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- Table row -->
                            <div class="row">
                                <div class="col-12 table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Qty</th>
                                                <th>Product</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int counter = 0; counter < Model.Products.Count; counter++)
                                            {
                                                {total = total + Model.Products[counter].Price;}
                                                <tr>
                                                    <td>@Model.Products[counter].Quantity</td>
                                                    <td>@Model.Products[counter].Name</td>
                                                    <td>@Model.Products[counter].Price</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <div class="row">
                                <!-- accepted payments column -->
                                <div class="col-6">

                                </div>
                                <!-- /.col -->
                                <div class="col-6">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tr>
                                                <th>Total:</th>
                                                <td>@total </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.invoice -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>
